{
  "version": 2,
  "installCommand": "npm install --prefix server && cd client && npm install",
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
  "functions": {
    "api/index.js": {
      "memory": 256,
      "maxDuration": 30,
      "includeFiles": "server/**,CipherSqlStudio-assignment.json"
    }
  }
}
