{
  "name": "ciphersqlstudio",
  "version": "1.0.0",
  "description": "CipherSQLStudio - Browser-based SQL Learning Platform",
  "scripts": {
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "build:client": "cd client && npm run build",
    "postinstall": "npm run install:server && npm run install:client && npm run build:client",
    "start": "cd server && node server.js",
    "seed": "cd server && node seeds/seed.js",
    "dev:server": "cd server && npx nodemon server.js",
    "dev:client": "cd client && npx vite --host"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
